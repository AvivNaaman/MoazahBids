@model MoazahBids.Domain.Entities.Bid

@{
    ViewData["Title"] = "דרישה חדשה";
}

<h1>יצירת דרישה חדשה</h1>
<h6>לאחר השמירה, תוכלו להוסיף פריטים לרשימת הפריטים של הדרישה.</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                שם
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                הערות כלליות
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                תאריך אחרון להגשת הצעות
                <input asp-for="LastCallDate" class="form-control" />
                <span asp-validation-for="LastCallDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">בחזרה למסך הראשי</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
